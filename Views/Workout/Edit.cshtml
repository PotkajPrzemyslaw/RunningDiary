@model WorkoutViewModel

@{
    ViewData["Title"] = "Edit Workout";
}

<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-3">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <form asp-controller="Workout" asp-action="Edit"asp-route-runnerId="@Model.Runner.Id">
            <div class="form-group">
                <label asp-for="TypeOfWorkout" class="control-label"></label>
                <select asp-for="TypeOfWorkout" asp-items="@Model.TypeOfWorkoutList"></select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfWorkout" class="control-label"></label>
                <input asp-for="DateOfWorkout" type="date" class="form-control" />
                <span asp-validation-for="DateOfWorkout" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-dark">Save</button>
        </form>
    </div>
</div>
<div><a asp-action="Index"asp-route-runnerId="@int.Parse(TempData["RunnerId3"].ToString())">Back to List</a></div>